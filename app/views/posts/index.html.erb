<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Blog
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/">Home</a>
            </li>
            <li class="active">Blog</li>
        </ol>
    </div>
</div><!-- /.row -->

<div class="row">
    <!-- Blog Entries Column -->
    <div class="col-md-9">

        <!-- Blog Post Row -->
        <div class="row">
            <% @posts.each do |p| %>
                <div class="col-sm-6 blog-item">
                    <div class="thumbnail">
                        <a href="#">
                          <img class="img-responsive" src="https://unsplash.it/700/300?random" alt="">
                        </a>
                        <h3><%= link_to p.title, post_path(p) %></h3>
                        <p class="lead">
                          by <a href="#">Heber Sandoval</a>
                        </p>
                        <p><i class="fa fa-clock-o" aria-hidden="true"></i></span> Posted on <%= p.created_at.strftime("%B %d, %Y") %></p>
                        <p><%= p.content %></p>
                    </div>
                </div>
            <% end %>
        </div>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
      <!-- Blog Sidebar Widgets Column -->
      <%= render 'pages/blog_sidebar' %>
  </div>  <!-- .row -->

  <!-- Footer -->
