<% provide(:title, "Blog") %>

  <!-- Page Heading -->
  <header class="full-header">
      <div class="section-headline">
          <div class="container">
                <h1>Blog</h1>
              <!-- <h2>Will Knock Your Socks Off</h2> -->
          </div>
      </div>
  </header>

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
      <div class="col-lg-12"><br>
          <h1 class="page-header">
              <small></small>
          </h1>
          <ol class="breadcrumb">
              <li><a href="/">Home</a>
              </li>
              <li class="active">Blog</li>
          </ol>
      </div>
  </div><!-- /.row -->

  <div class="row">
      <!-- Blog Entries Column -->
      <div class="col-md-9">

          <!-- Blog Post Row -->
          <div class="row">
              <% if @posts.present? %>
                  <%= render 'post' %>
              <% else %>
                  <div class="alert alert-danger" role="alert">
                      <p style="color:red";><em>There are no posts containing the term(s): <strong><%= params[:search] %>.</strong></em></p>
                  </div>
              <% end %>
          </div>

          <!-- Pagination -->
          <div class="row text-center">
              <div class="col-lg-12">
                  <ul class="pagination">
                      <%# will_paginate @posts %>
                  </ul>
              </div>
          </div>

      </div>
        <!-- Blog Sidebar Widgets Column -->
        <%= render 'pages/blog_sidebar' %>
    </div><!-- .row -->

<!-- Footer -->
