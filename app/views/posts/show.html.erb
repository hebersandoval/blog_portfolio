<% provide(:title, "Post") %>

<div class="container">
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Post
              <!-- Title -->
              <small><%= @post.title %></small>
          </h1>
          <ol class="breadcrumb">
              <li><a href="/">Home</a>
              </li>
              <li class="active">Post</li>
          </ol>
      </div>
  </div>
  <!-- /.row -->

  <div class="row">
      <!-- Blog Post Content Column -->
      <div class="col-md-9">
          <!-- Blog Post -->
          <!-- Preview Image -->
          <img class="img-responsive" src="https://unsplash.it/900/300?random" alt="">
          <hr>
            <!-- Date/Time -->
            <p><i class="fa fa-clock-o" aria-hidden="true"></i> Posted on <%= @post.created_at.strftime("%B %d, %Y") %> by Heber Sandoval

              <!-- Post categories -->
              <% @post.categories.each do |c| %>
                  <span>In <%= link_to c.name, category_path(c) %></span>
              <% end %>

              <% if current_user.try(:admin?) %>
                  <!-- Edit link -->
                  <%= link_to edit_post_path(@post), class: "btn btn-default btn-xs" do %>
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                  <% end %>

                  <!-- Delete link -->
                  <%= link_to @post, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "You sure?" } do %>
                      <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
              <% end %>
            </p>
          <hr>
          <!-- Post Content -->
          <p><%= markdown(@post.content) %></p>

          <hr>
          <!-- Pager -->
          <ul class="pager">
              <li class="previous">
                  <a href="#">&larr; Older</a>
              </li>
              <li class="bck">
                  <%= link_to 'Back', posts_path %>
              </li>
              <li class="next">
                  <a href="#">Newer &rarr;</a>
              </li>
          </ul>
          <hr>
      </div><!-- .col-md-9 -->

      <!-- Blog Sidebar Widgets Column -->
      <%= render 'pages/blog_sidebar' %>

      <!-- Posted Comments -->
      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <!-- Blog Comments -->
            <!-- Comments Form -->
            <%#= render 'comment' %>
            <%= render 'disqus' %>
          </div><!-- .col-md-9 -->
        </div><!-- .row -->
      </div><!-- .container -->
      <!-- End Posted Comments -->

  </div><!-- /.row -->
</div><!-- /.container -->
